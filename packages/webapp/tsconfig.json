{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./lib",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@helpers/*": [
        "helpers/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@customTypes/*": [
        "customTypes/*"
      ],
      "@reducers/*": [
        "reducers/*"
      ],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "extends": "../../tsconfig.json",
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}